{{outlet}}

<article>
  <h2 class="detailed-reminder-title">{{model.title}}</h2>
  <span class="detailed-reminder-date">{{model.date}}</span>
  <span class="detailed-reminder-notes">{{model.notes}}</span>
  {{#link-to 'reminders.edit' model}}
    <button class="edit-reminder-button">Edit</button>
  {{/link-to}}
  {{#link-to 'reminders'}}
    <button class="remove-detailed-reminder-button" {{action 'remove' model}}>X</button>
  {{/link-to}}
</article>

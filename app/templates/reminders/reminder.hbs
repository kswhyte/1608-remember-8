{{outlet}}

{{#with model as |reminder|}}
  <article>
    <h2 class="detailed-reminder-title">{{reminder.title}}</h2>
    <span class="detailed-reminder-date">{{reminder.date}}</span>
    <span class="detailed-reminder-notes">{{reminder.notes}}</span>
  </article>
  {{#link-to 'reminders.edit' reminder}}
    <button class="edit-reminder-button">Edit Reminder</button>
  {{/link-to}}
{{/with}}
